{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowJs": true,
    "lib": [
      "es2016",
      "es2015"
    ],
    "types": [
      "node",
      "minimist",
      "chalk"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ]
}